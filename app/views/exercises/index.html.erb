<div class="container">
  <!--Section: Products v.2-->
  <section class="section">

      <!--Section heading-->
      <h1 class="section-heading">Exercises</h1>
      <!--Section sescription-->
      <p class="section-description">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Fugit, error amet numquam iure provident voluptate esse quasi, veritatis totam voluptas nostrum quisquam eum porro a pariatur accusamus veniam. Quia, minima?</p>

      <!--First row-->
      <div class="row">
          <!--First column-->
        <% @exercises.each do |exercise| %>
          <div class="col-lg-4 col-md-12 mb-r">

              <!--Card-->
              <div class="card card-cascade wider">

                  <!--Card image-->
                  <div class="overlay hm-white-slight">
                      <!-- <iframe width="100%" height="320" src="https://www.youtube.com/embed/7qHInWs_3mY" frameborder="0" allowfullscreen></iframe> -->
                      <%= link_to image_tag(exercise.image_url), exercise %>
                      <a>
                          <div class="mask waves-effect waves-light"></div>
                      </a>
                  </div>
                  <!--/.Card image-->

                  <!--Card content-->
                  <div class="card-block text-center">
                      <!--Category & Title-->
                      <h4 class="card-title"> <strong><a href="" class="text-white"><%= link_to exercise.workout, exercise %></a></strong></h4>

                      <!--Description-->
                      <div id="star-rating" data-score= <%= @review %> ></div>
                      <p class="card-text"><%= exercise.workout %>
                      </p>

                      <!--Card footer-->
                      <div class="card-footer">
                          <span class="left"><i class="fa fa-calendar"></i> <%= exercise.workout_date %></span>
                          <span class="right">
                          <!-- <a class="" data-toggle="tooltip" data-placement="top" title="Quick Look"><i class="fa fa-eye"></i></a> -->
                          <%= link_to '', exercise, toggle: "tooltip", placement: "top", title: "Quick Look", class: "fa fa-eye" %>
                          <a class="" data-toggle="tooltip" data-placement="top" title="Add to Wishlist"><i class="fa fa-heart"></i></a>
                          </span>
                      </div>

                  </div>
                  <!--/.Card content-->

              </div>
              <!--/.Card-->

          </div>
          <!--/First column-->
        <% end %>
      </div>
      <!--/First row-->

  </section>
  <!--/Section: Products v.2-->

</div>
<script type="text/javascript">
  $('.star-rating').raty({
    path: 'https://s3.amazonaws.com/yelp-clone-rails/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score')
    }
  });
</script>
