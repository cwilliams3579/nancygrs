<div class="container">
  <!--Section: Magazine v.2-->
  <section class="section magazine-section">

    <!--Section heading-->
    <h1 class="section-heading text-white">Exercises</h1>
    <!--Section description-->
    <p class="section-description">Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.</p>

    <!--First row-->
    <div class="row text-left">

      <!--First column-->
      <div class="col-lg-6 col-md-12">

        <!-- Exercise -->
        <div class="center">

          <!--Image-->
          <div class="view overlay hm-white-slight">
            <%= image_tag @exercise.image.url, class: "img-fluid" if @exercise.image? %>
            <!-- <iframe width="100%" height="480" src="https://www.youtube.com/embed/7qHInWs_3mY" frameborder="0" allowfullscreen></iframe> -->
          </div>

          <!--Excerpt-->
          <div class="news-data form-input">
            <p><strong class="form-input"><i class="fa fa-clock-o fa-lg"></i>&nbsp; Posted  <%= time_ago_in_words(@exercise.created_at) %> ago</strong></p>
            <h3 class="h3-responsive center"> <i class="fa fa-line-chart fa-fonts"></i>  &nbsp;<%= @exercise.title %></h3>
          </div>
          
          <p class="black-text"><%= @exercise.workout %></p>

          <p class="form-input">
            <i class="fa fa-clock-o faa-tada animated"></i> &nbsp; Duration <%= @exercise.duration_in_min %> minutes
          </p>

        </div>
        <!--/ Exercise -->

      </div>
      <!--/First column-->

      <!--Second column-->
      <div class="col-lg-6 col-md-12">

      <% if @reviews.blank? %>
        <h3>No reviews yet. Be the the first to write one.</h3>
        <% else %>
            <!--Small news-->
            <% @reviews.each do |review| %>
            <div class="single-news">

              <div class="row">
                <div class="col-md-3">

                  <!--Image-->
                  <div class="view overlay hm-white-slight">
                    <img src="https://mdbootstrap.com/img/Photos/Horizontal/Nature/4-col/img%20(77).jpg">
                    <a>
                      <div class="mask"></div>
                    </a>
                  </div>
                  <!--Excerpt-->
                  <div class="col-md-9">
                    <div class="star-rating" data-score= <%= link_to @avg_rating, new_exercise_review_path(@exercise), data: { turbolinks: false } %> ></div>
                    <p>
                      <%= truncate(review.comment, length: 300) %>
                      <i class="fa fa-angle-right"></i>
                    </p>
                  </div>

                </div>
              </div>
              <!--/Small news-->
            </div>
            <% end %>
        <% end %>
        <% if user_signed_in? %>
          <%= link_to 'New Review',  new_exercise_review_path(@exercise), class: "btn btn-outline-white indigo waves-effect waves-light" %>&nbsp; &nbsp; &nbsp;
        <!--/Second column-->
        <% end %>

        <% if @reviews.any? %>
          <%= link_to '',  edit_exercise_review_path(@exercise), class: "fa fa-pencil fa-2x faa-wrench animated-hover fa-fonts" %>&nbsp; &nbsp; &nbsp;
        <% end %>
      </div>
      <!--/First row-->
      <% if current_user && current_user.admin? %>
        <div class="btn-group mx-auto">
          <%= link_to "", edit_exercise_path(@exercise), class: "fa fa-pencil fa-2x faa-horizontal animated-hover fa-fonts" %>&nbsp; &nbsp; &nbsp;
          <%= link_to "", @exercise, class: "fa fa-trash fa-2x faa-shake animated-hover fa-fonts", :method => :delete, :data => {:confirm => "You Sure?"} %>
        </div>
        <% end %>

    </section>
    <!--/Section: Magazine v.2-->

</div>
<%= link_to '',  :back, class: "fa fa-hand-o-left fa-2x faa-horizontal animated fa-fonts" %>

<script type="text/javascript">
  $('.star-rating').raty({
    path: 'https://s3.amazonaws.com/yelp-clone-rails/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score')
    }
  });
</script>
