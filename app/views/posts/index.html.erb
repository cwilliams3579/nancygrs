                                    <div class="card-block">

                                        <!--Header-->
                                        <div class="text-center form-header indigo btn-outline-white">
                                            <h2 class="mt-1"> Subscribe</h2>
                                        </div>

                                        <!--Body-->
                                        <p class="font-thin">We'll write rarely, but only the best content.</p>
                                        <br>

                                        <!--Body-->
                                        <div class="md-form">
                                            <i class="fa fa-user prefix"></i>
                                            <input type="text" id="form3" class="form-control">
                                            <label for="form3" class="font-thin">Your name</label>
                                        </div>

                                        <div class="md-form">
                                            <i class="fa fa-envelope prefix" id="fa-envelope"></i>
                                            <input type="text" id="form2" class="form-control">
                                            <label for="form2" class="font-thin">Your email</label>
                                        </div>

                                        <div class="text-center">
                                            <button class="btn btn-outline-white indigo waves-effect waves-light">Send</button>
                                        </div>

                                    </div>
                                </div>
                                <!--/Form without header-->

                            </div>
                            <!--/First column-->

                        </div>
                        <!--/First row-->

                    </section>
                    <!--/Newsletter-->

                    <div class="divider-new" style="visibility: visible;">
