        <!--Main layout-->

        <div class="container">

            <!--First row-->
            <div class="row mt-1">

                <!--First column-->
                <div class="col-md-12 mb-2">

                    <!--Carousel Wrapper-->
                    <div id="carousel-example-3" class="carousel slide carousel-fade z-depth-1-half" data-ride="carousel">
                        <!--Indicators-->
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-3" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-3" data-slide-to="1" class=""></li>
                            <li data-target="#carousel-example-3" data-slide-to="2" class=""></li>
                        </ol>
                        <!--/.Indicators-->

                        <!--Slides-->
                        <div class="carousel-inner" role="listbox">
                            <!--First slide-->
                            <div class="carousel-item active">
                                <!--Mask color-->
                                <div class="view hm-black-slight">
                                    <img src="https://mdbootstrap.com/img/Photos/Slides/img%20(116).jpg" class="img-fluid" alt="">
                                    <div class="full-bg-img">
                                    </div>
                                </div>
                                <!--Caption-->
                                <div class="carousel-caption caption-2">
                                    <div>
                                        <h2 class="h2-responsive"> My favourite photos from last trip to Europe</h2>
                                    </div>
                                </div>
                                <!--Caption-->
                            </div>
                            <!--/First slide-->

                            <!--Second slide-->
                            <div class="carousel-item">
                                <!--Mask color-->
                                <div class="view hm-black-slight">
                                    <img src="https://mdbootstrap.com/img/Photos/Slides/img%20%2897%29.jpg" class="img-fluid" alt="">
                                    <div class="full-bg-img">
                                    </div>
                                </div>
                                <!--Caption-->
                                <div class="carousel-caption caption-2">
                                    <div>
                                        <h2 class="h2-responsive">My weekend in the nature</h2>
                                    </div>
                                </div>
                                <!--Caption-->
                            </div>
                            <!--/Second slide-->

                            <!--Third slide-->
                            <div class="carousel-item">
                                <!--Mask color-->
                                <div class="view hm-black-slight">
                                    <img src="https://mdbootstrap.com/img/Photos/Slides/img%20(119).jpg" class="img-fluid" alt="">
                                    <div class="full-bg-img">
                                    </div>
                                </div>
                                <!--Caption-->
                                <div class="carousel-caption caption-2">
                                    <div>
                                        <h2 class="h2-responsive">Tatras - the best choice for holiday</h2>
                                    </div>
                                </div>
                                <!--Caption-->
                            </div>
                            <!--/Third slide-->
                        </div>
                        <!--/Slides-->

                        <!--Controls-->
                        <a class="carousel-control-prev" href="#carousel-example-1z" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel-example-1z" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                        <!--/.Controls-->

                    </div>
                    <!--/Carousel Wrapper-->

                </div>
                <!--/First column-->

            </div>
            <!--First row-->

            <!--Second row-->
            <div class="row">

                <!--Newsfeed-->
                <div class="col-lg-8">

                    <div class="divider-new mt-1">
                        <h2>Design</h2>
                    </div>

                    <!--Section: Design-->
                    <section class="section text-center text-lg-left">

                        <% Post.all.each do |post| %>
                            <!--First row-->
                            <div class="row mb-3">

                                <!--First column-->
                                <div class="col-lg-5 mb-1-half">

                                    <!--Image-->
                                    <div class="view hm-white-slight">
                                        <!-- <img src="https://mdbootstrap.com/img/Photos/Horizontal/Things/4-col/img%20%286%29.jpg" class="img-fluid" alt="Post Image"> -->
                                        <%= image_tag( post.image, class: "img-fluid", alt: "Post Image" ) %>
                                            <div class="mask waves-effect waves-light"></div>
                                    </div>
                                    <!--/Image-->

                                </div>
                                <!--/First column-->

                                <!--Second column-->
                                <div class="col-lg-7">
                                    <!--Excerpt-->
                                    <h6 class="text-muted mb-1">
                                        <%= post.created_at.strftime("%m/%d/%Y")  %>
                                    </h6>
                                    <h4 class="font-up mb-1 text-muted font-thin">
                                        <%= post.title.capitalize %>
                                    </h4>
                                    <p class="text-muted font-thin">
                                        <%= truncate(post.content, length: 200) %>
                                    </p>
                                    <%= link_to "Read more", post, class: "btn btn-outline-white indigo waves-effect" %>
                                        <!--/Excerpt-->

                                </div>
                                <!--/Second column-->
                            </div>
                            <!--/First row-->
                            <% end %>

                    </section>
                    <!--/Section: Design-->

                    <!--Pagination dark grey-->
                    <nav>
                        <ul class="pagination pg-darkgrey flex-center mt-5 mb-5">

                            <li>
                                <%= paginate @posts %>
                            </li>
                        </ul>

                    </nav>
                    <!--/Pagination dark grey-->

                </div>
                <!--/Newsfeed-->

                <!--Sidebar-->
                <div class="col-lg-4">

                    <!--Author card-->
                    <section style="visibility: visible;">

                        <!--Card-->
                        <div class="card author-card">
                            <!--Avatar-->
                            <div class="avatar">
                                <%= image_tag("avatar.ico", size: "16x10", class: "img-fluid img-author", alt: "Edit Entry") %>
                            </div>

                            <div class="card-block">

                                <!--Name-->
                                <h4 class="card-title font-up text-center">Nancy Destin</h4>
                                <!--Description-->
                                <p class="font-thin">Hello, I'm Nancy I've 22 years old and my biggest passion is physical therapy. I love travel
                                    around the world and take photos of wild animals, landscapes and local people.</p>

                                <div class="mx-auto">
                                    <!--Dribbble-->
                                    <a class="icons-sm drib-ic">
                                        <i class="fa fa-dribbble"> </i>
                                    </a>
                                    <!--Instagram-->
                                    <a class="icons-sm ins-ic">
                                        <i class="fa fa-instagram"> </i>
                                    </a>
                                    <!--Pinterest-->
                                    <a class="icons-sm pin-ic">
                                        <i class="fa fa-pinterest"> </i>
                                    </a>
                                </div>

                            </div>

                        </div>
                        <!--/Card-->

                    </section>
                    <!--/Author card-->


                    <div class="divider-new" style="visibility: visible;">
                        <h3>Newsletter</h3>
                    </div>

                    <!--Newsletter-->
                    <section class="" style="visibility: visible;">

                        <!--First row-->
                        <div class="row">

                            <!--First column-->
                            <div class="col-md-12">

                                <!--Form without header-->
