<% content_for :title do %>Contact<% end %>
<h1 class="page_title">Say Hello!</h1>

<br><br><br><br><br><br><br>
<div class="container-small">
  <div class="card">
    <div class="card-block" style="background:#fff;">
      <div class="form-header green-gradient">
        <h3><i class="fa fa-pencil faa-horizontal animated"></i> Contact</h3>
      </div>
      <%= form_for @contact do |f| %>
        <div class="md-form">
          <i class="fa fa-user prefix fa-fonts"></i>
          <%= f.text_field :name, :autofocus => true, placeholder: "John", class: 'form-control' %>
        </div>
        <div class="md-form">
          <i class="fa fa-envelope prefix fa-fonts"></i>
          <%= f.email_field :email, placeholder: "johndoe@gmail.com", class: 'form-control' %>
        </div>
        <div class="md-form">
          <i class="fa fa-pencil prefix fa-fonts"></i>
          <%= f.text_area :message, as: :text, class: 'md-textarea' %>
        </div>

        <div class="hidden">
          <i class="fa fa-user prefix fa-fonts"></i>
          <%= f.text_field :nickname, hint: 'leave this field blank', class: 'form-control' %>
        </div>

        <div class="md-form">
          <%= f.button "Send Message", class: "btn btn-block btn-lg green-gradient", data: { disable_with: "<i class='fa fa-spinner fa-spin'></i>Processing..."} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<br><br>
