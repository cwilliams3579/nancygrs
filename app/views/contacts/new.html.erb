<% content_for :title do %>Contact<% end %>
<br><br><br><br><br>
<!--Section: Contact v.1-->
<section class="section mb-4">

  <!--Section heading-->
  <h1 class="section-heading green-text">Generations Rehab Services</h1>
  <!--Section sescription-->

  <div class="row">

    <!--First column-->
    <div class="col-md-5">

      <!--Form with header-->
      <div class="card">

        <div class="card-block">
          <!--Header-->
          <div class="form-header green-gradient">
            <h3><i class="fa fa-envelope"></i> Write to us</h3>
          </div>

          <p class="text-center">We'll get back to you shortly.</p>
          <br>

          <%= render 'layouts/messages' %>
          <!--Body-->
          <%= form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
            <div class="md-form">
              <i class="fa fa-user prefix"></i>
              <%= f.text_field :name, autofocus: true, class:"form-control form-input" %>
            </div>

            <div class="md-form">
              <i class="fa fa-envelope prefix"></i>
              <%= f.text_field :email, required: true, placeholder: "johndoe@gmail.com", class:"form-control form-input" %>
            </div>

            <div class="md-form">
              <i class="fa fa-phone prefix"></i>
              <%= f.text_field :number, required: true, placeholder: "Your phone number", class:"form-control form-input" %>
            </div>

            <div class="md-form">
              <i class="fa fa-tag prefix"></i>
              <%= f.text_area :message, required: true, placeholder: "Enter message", class:"md-textarea" %>
            </div>

            <div class="md-form hidden">
              <i class="fa fa-pencil prefix"></i>
              <%= f.text_field :nickname, :hint => 'Leave this field blank!', class: "form-control" %>
            </div>

            <div class="md-form">
              <%= f.button "Send Message", class: "btn btn-block btn-lg green-gradient", data: { disable_with: "<i class='fa fa-spinner fa-spin'></i>Processing..."} %>
            </div>
          </div>
        <% end %>
      </div>
      <!--/Form with header-->
    </div>
    <!--/First column-->
    <!--Second column-->
    <div class="col-md-7">
      <br class="hidden-md-up"><br class="hidden-md-up">
      <!--Google map-->
      <div class="map-responsive">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3585.7326541016705!2d-80.2805884845207!3d26.009573683524785!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88d9a61d3994a225%3A0xc1aa4c7001b836fb!2s10031+Pines+Blvd+%23217%2C+Pembroke+Pines%2C+FL+33024!5e0!3m2!1sen!2sus!4v1489792615260" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
      </div>

      <br>
      <!--Buttons-->
      <div class="row text-center">
        <div class="col-md-4">
          <a class="btn-floating btn-small green-gradient"><i class="fa fa-map-marker"></i></a>
          <p>Excel Rehab Services</p>
          <p>10031 Pines BLVD Suite 217</p>
          <p>Pembroke Pines, FL 33024</p>
        </div>

        <div class="col-md-4">
          <a class="btn-floating btn-small green-gradient"><i class="fa fa-phone"></i></a>
          <p>Phone: 954-305-5001</p>
          <p>Fax: 954-391-9736</p>
          <p>Mon - Fri, 8:00am 5:00pm</p>
        </div>

        <div class="col-md-4">
          <a href="mailto:MsNancy.PT@gmail.com?Subject=Hello%20again" target="_top" class="btn-floating btn-small green-gradient"><i class="fa fa-envelope"></i></a>
          <p>Nancy Pierre-Destin, P.T</p>
          <p>MsNancy.PT@gmail.com</p>
        </div>
      </div>
    </div>
    <!--/Second column-->
  </div>
</section>
<!--/Section: Contact v.1-->
