<br><br>
<div class="container-small">
    <div class="card">
      <div class="card-block" style="background:#fff;">
        <div class="form-header blue-gradient">
          <h3><i class="fa fa-pencil faa-horizontal animated"></i> Sign In</h3>
        </div>
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
          <%= devise_error_messages! %>
          <div class="md-form">
            <i class="fa fa-envelope faa-tada animated prefix"></i>
            <%= f.label :email %>
            <%= f.email_field :email, :autofocus => true, placeholder: "johndoe@gmail.com", class: 'form-control' %>
          </div>
          <div class="md-form">
            <i class="fa fa-lock faa-tada animated prefix"></i>
            <%= f.password_field :password, placeholder: "Your password", class: 'form-control' %>
          </div>
            <div class="md-form">
              <%= f.submit 'Sign in', :class => "btn btn-block btn-lg blue-gradient" %>
            </div>
            <% if devise_mapping.rememberable? -%>
              <div class="checkbox" style="width:150px">
                <label>
                  <%= f.check_box :remember_me %> Remember me
                </label>
              </div>
            <% end -%>
        <% end %>
        <div class="md-form">
          <%- if devise_mapping.registerable? %>
            <%= link_to 'Sign up', new_registration_path(resource_name), class: 'right'  %>
          <% end -%><br>
          <%- if devise_mapping.recoverable? %>
          <%= link_to "Forgot password?", new_password_path(resource_name), class: 'right' %>
          <% end -%>
        </div>
    </div>
  </div>
</div>
<br><br>
<%= link_to "", root_path, class: "fa fa-hand-o-left fa-2x faa-horizontal animated" %>
