<% content_for :title do %>Edit Password<% end %>
<br><br>
<div class="container-small">
    <div class="card">
      <div class="card-block" style="background:#fff;">
        <div class="form-header purple-gradient">
          <h3><i class="fa fa-lock faa-shake animated"></i></h3>
        </div>
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
          <h3>Change your password</h3>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>
          <div class="md-form">
            <i class="fa fa-lock prefix"></i>
              <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control' %>
            </div>
            <div class="md-form">
              <i class="fa fa-lock prefix"></i>
              <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: "Confirm new password", class: 'form-control' %>
            </div>
            <div class="md-form">
              <%= f.button "Change my Password", class: "btn btn-block btn-lg green-gradient", data: { disable_with: "<i class='fa fa-spinner fa-spin'></i>Processing..."} %>
            </div>
        <% end %>
      </div>
    </div>
</div>
<%= link_to "", root_path, class: "fa fa-hand-o-left fa-2x faa-horizontal animated fa-fonts" %>
